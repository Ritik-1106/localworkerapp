<%= form_with(model: [@job, @job_application], local: true) do |form| %>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="form-group">
    <%= form.label :softskills %>
    <%= form.text_field :softskills %>
  </div>

  <div class="form-group">
    <%= form.label :expected_salary %>
    <%= form.text_field :expected_salary %>
  </div>

  <%= form.submit 'submit' %>
<% end %>
