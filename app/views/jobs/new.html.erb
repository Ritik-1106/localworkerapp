<h1><%= @job.new_record? ? "Post a New Job" : "Edit Job" %></h1>
<%= form_for @job do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :salary %>
  <%= f.text_field :salary %>



  <%= f.label :location %>
  <%= f.text_field :location %>

  <%= f.label :vacancies %>
  <%= f.text_field :vacancies %>

  <%= f.label :category %>
  <%= f.collection_select :category_id, Category.all, :id, :name %>

  <%= f.submit 'Save Job' %>
<% end %>